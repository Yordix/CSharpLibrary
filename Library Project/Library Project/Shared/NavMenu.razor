<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Library Project</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="admin" @onclick="()=>expandSubMenu= !expandSubMenu">
                <span class="oi oi-person" aria-hidden="true"></span> Admin
            </NavLink>
            @if (expandSubMenu)
            {
                <div class="flex-column">
                    <div class="nav-item px-3">
                        <NavLink class="expand-menu" href="admin/rental_status">
                            <span class="oi oi-clock" aria-hidden="true"></span> Kölcsönzési állapotok
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="expand-menu" href="admin/members">
                            <span class="oi oi-people" aria-hidden="true"></span> Regisztrált tagok
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="expand-menu" href="admin/members">
                            <span class="oi oi-cart" aria-hidden="true"></span> Kölcsönzés
                        </NavLink>
                    </div>
                </div>
            }
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="books">
                <span class="oi oi-book" aria-hidden="true"></span> Könyvek
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="my-rents">
                <span class="oi oi-folder" aria-hidden="true"></span> Kölcsönzéseim
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubMenu;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
